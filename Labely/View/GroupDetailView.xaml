<Page x:Class="Labely.View.GroupDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:MD="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Labely.View"
      mc:Ignorable="d" 
     d:DesignHeight="700" d:DesignWidth="1300"
      Title="GroupView">
    <Grid x:Name="MainGrid">
        <Grid x:Name="Grid1">
            <MD:Card  Margin="3" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0 0">
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Margin="5,0,0,0" ItemsSource="{Binding ListOfGroup}" SelectedItem="{Binding Search}" MD:HintAssist.Hint="Search by GroupName" Style="{StaticResource MaterialDesignFloatingHintComboBox}" DisplayMemberPath="GroupName" Foreground="Black" IsEditable="True" Height="45" FontSize="16" Width="550"/>
                            <!--<TextBox Name="txtSer" Margin="3,0,0,0"  MD:HintAssist.Hint="Search by GroupName" Text="{Binding Search,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Cambria" Height="47" FontSize="19" Foreground="Black" Width="550"/>-->
                        </StackPanel>
                        <Button MD:ShadowAssist.ShadowDepth="Depth2" Command="{Binding DeleteCommand}" CommandParameter="1" ToolTip="Delete" Background="Red" BorderBrush="Red" Margin="0,0,180,0" Height="48" Width="47" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.RowSpan="2" Style="{StaticResource MaterialDesignFloatingActionButton}">
                            <MD:PackIcon Kind="Delete" Height="28" Width="28" FontWeight="Bold"/>
                        </Button>
                        <Button MD:ShadowAssist.ShadowDepth="Depth2" Command="{Binding AddFromCommand}" CommandParameter="0" ToolTip="Add Group" Background="#00b386" BorderBrush="#00b386" Margin="0,0,125,0" Height="48" Width="47" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.RowSpan="2" Style="{StaticResource MaterialDesignFloatingActionButton}">
                            <MD:PackIcon Kind="PlusCircle" Height="28" Width="28" FontWeight="Bold"/>
                        </Button>
                        <Button MD:ShadowAssist.ShadowDepth="Depth2" Command="{Binding AddFromCommand}" CommandParameter="2" ToolTip="Import" Background="#ffaa00" BorderBrush="#ffaa00" Margin="0,0,70,0" Height="48" Width="47" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.RowSpan="2" Style="{StaticResource MaterialDesignFloatingActionButton}">
                            <MD:PackIcon Kind="Import" Height="28" Width="28" FontWeight="Bold"/>
                        </Button>
                        <Button MD:ShadowAssist.ShadowDepth="Depth2" Command="{Binding PrintGCCommand}" CommandParameter="1" ToolTip="Print" Background="#6699ff" BorderBrush="#6699ff" Margin="0,0,15,0" Height="48" Width="47" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.RowSpan="2" Style="{StaticResource MaterialDesignFloatingActionButton}">
                            <MD:PackIcon Kind="Printer" Height="28" Width="28" FontWeight="Bold"/>
                        </Button>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="3,0">

                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="2" Margin="0">
                        <DataGrid Name="dgUsers"  SelectionMode="Single" IsReadOnly="True" ItemsSource="{Binding ListOfGroupD,UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.Header>
                                        <CheckBox x:Name="ChkAll" Cursor="Hand" Click="CheckBox_Click"></CheckBox>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate >
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsCheck,UpdateSourceTrigger=PropertyChanged}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="GroupName" FontSize="15" Binding="{Binding GroupName}" Width="*" />
                                <DataGridTextColumn Header="Lable1" FontSize="15" Binding="{Binding Lable1}" Width="*" />
                                <DataGridTextColumn Header="Lable2" FontSize="15" Binding="{Binding Lable2}" Width="*" />
                                <DataGridTextColumn Header="Lable3" FontSize="15" Binding="{Binding Lable3}" Width="*" />
                                <DataGridTextColumn Header="Lable4" FontSize="15" Binding="{Binding Lable4}" Width="*" />
                                <DataGridTextColumn Header="Lable5" FontSize="15" Binding="{Binding Lable5}" Width="*" />
                                <DataGridTextColumn Header="Lable6" FontSize="15" Binding="{Binding Lable6}" Width="*" />
                                <DataGridTextColumn Header="Lable7" FontSize="15" Binding="{Binding Lable7}" Width="*" />
                                <DataGridTextColumn Header="Lable8" FontSize="15" Binding="{Binding Lable8}" Width="*" />
                                <DataGridTextColumn Header="Lable9" FontSize="15" Binding="{Binding Lable9}" Width="*" />
                                <DataGridTextColumn Header="Lable10" FontSize="15" Binding="{Binding Lable10}" Width="*" />
                                <DataGridTemplateColumn Header="Action" Width="115">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button x:Name="BtnEdit" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" ToolTip="Edit" Width="28" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#00b386" Click="BtnEdit_Click">
                                                    <MD:PackIcon Kind="PencilBox" Width="28" Height="27"/>
                                                </Button>
                                                <Button x:Name="BtnDelete" Margin="5,0,0,0" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" ToolTip="Delete" Width="28" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#ff4d4d" Click="BtnDelete_Click">
                                                    <MD:PackIcon Kind="Delete" Width="28" Height="28"/>
                                                </Button>
                                                <Button x:Name="BtnPrint" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" ToolTip="Print" Width="28" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#00b3b3" Click="BtnPrint_Click">
                                                    <MD:PackIcon Kind="Printer" Width="28" Height="28"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                        </DataGrid>
                    </Grid>
                </Grid>
            </MD:Card>
            <Button Grid.Row="1" Visibility="Collapsed" Command="{Binding ImportCommand}" Margin="0,50,30,5" Height="65" Width="63" ToolTip="Import GroupDetail" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.RowSpan="2" Style="{StaticResource MaterialDesignFloatingActionButton}">
                <MD:PackIcon Kind="Upload" Height="35" Width="35" FontWeight="Bold"/>
            </Button>
            <Grid  Margin="-2,0,2,0" Visibility="{Binding FrmVis2,UpdateSourceTrigger=PropertyChanged}">
                <Grid   >
                    <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" Opacity=".28" />
                    <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Padding="0" BorderBrush="Transparent" BorderThickness="0">
                        <MD:Card   Padding="0" Margin="0" Width="420"  Height="180" VerticalAlignment="Center" HorizontalAlignment="Center" >
                            <Grid  Background="#ffffff" Width="420"  Height="180"  VerticalAlignment="Center" HorizontalAlignment="Center"   >
                                <Grid.Effect>
                                    <DropShadowEffect BlurRadius="5"  ShadowDepth="1" Opacity="1"/>
                                </Grid.Effect>
                                <Grid.RowDefinitions>
                                    <RowDefinition  Height="45"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Background="#1497b8" >
                                    <MD:PackIcon Kind="Upload" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center" Foreground="White" Height="28" Width="32"/>
                                    <TextBlock FontFamily="Cambria" HorizontalAlignment="Left" Margin="38,0,0,0" FontSize="20"  Text="Import " Foreground="White" FontWeight="Bold"  VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
                                        <Button Command="{Binding AddFromCommand}" CommandParameter="3" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" >
                                            <MD:PackIcon Kind="Power" Height="28" Width="28"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1" Margin="5,10,5,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="10"/>
                                        <RowDefinition Height="70"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Margin="2,0,2,1">
                                        <StackPanel Orientation="Horizontal">
                                            <ComboBox  ItemsSource="{Binding ListOfGroup}" SelectedItem="{Binding SelectGm}" MD:HintAssist.Hint="Select Group" Style="{StaticResource MaterialDesignFloatingHintComboBox}" DisplayMemberPath="GroupName" Foreground="Black" IsEditable="True" Height="43" Width="400" FontSize="16" />
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" Margin="2,0,2,1">
                                        <StackPanel Orientation="Horizontal">
                                            <Button Command="{Binding AddGroupCommand}" CommandParameter="0" Margin="0,0,0,0" Width="150" Height="40" Background="#009973" FontSize="22" FontWeight="Bold" BorderBrush="#009973" >
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <MD:PackIcon Kind="Upload" VerticalAlignment="Center" Width="22 " Height="22"/>
                                                    <TextBlock HorizontalAlignment="Center" Margin="5,0,0,0" Text="Import" FontFamily="Cambria"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                    <!--<StackPanel Grid.Row="1" Margin="2,0,2,0">
                                        <DataGrid   SelectionMode="Single" IsReadOnly="True" ItemsSource="{Binding ListOfAddGroup,UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False">
                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn Header="Select" Width="80">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <CheckBox IsChecked="{Binding IsSelect,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" ></CheckBox>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="GroupName" FontSize="15" Binding="{Binding GName}" Width="*" />
                                                <DataGridTextColumn Header="Name" FontSize="15" Binding="{Binding Lable1}" Width="*" />
                                                <DataGridTextColumn Header="Address1" FontSize="15" Binding="{Binding Lable2}" Width="*" />
                                                <DataGridTextColumn Header="Address2" FontSize="15" Binding="{Binding Lable3}" Width="*" />
                                                <DataGridTextColumn Header="City Pin." FontSize="15" Binding="{Binding Lable4}" Width="*" />
                                                <DataGridTextColumn Header="Mobile No." FontSize="15" Binding="{Binding Lable5}" Width="*" />
                                                <DataGridTextColumn Header="Email" FontSize="15" Binding="{Binding Lable6}" Width="*" />
                                            </DataGrid.Columns>

                                        </DataGrid>

                                    </StackPanel>
                                    <StackPanel Grid.Row="5">
                                        <StackPanel Margin="0,10,5,0" HorizontalAlignment="Right"  Orientation="Horizontal">
                                            <Button Command="{Binding AddGroupCommand}" CommandParameter="1" Margin="0" Width="200" Height="50" Background="#009973" FontSize="22" FontWeight="Bold" BorderBrush="#009973" >
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <MD:PackIcon Kind="Inbox" VerticalAlignment="Center" Width="22 " Height="22"/>
                                                    <TextBlock HorizontalAlignment="Center" Margin="5,0,0,0" Text="SAVE" FontFamily="Cambria"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>-->
                                </Grid>
                            </Grid>
                        </MD:Card>
                    </Border>
                </Grid>

            </Grid>
            <Grid  Margin="-2,0,2,0" Visibility="{Binding FrmVis,UpdateSourceTrigger=PropertyChanged}">
                <Grid x:Name="GridAddForm"  >
                    <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" Opacity=".28" />
                    <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Padding="0" BorderBrush="Transparent" BorderThickness="0">
                        <MD:Card Name="From"  Padding="0" Margin="0" Width="550"  Height="640" VerticalAlignment="Center" HorizontalAlignment="Center" >
                            <Grid  Background="#ffffff" Width="550"  Height="640"  VerticalAlignment="Center" HorizontalAlignment="Center"   >
                                <Grid.Effect>
                                    <DropShadowEffect BlurRadius="5"  ShadowDepth="1" Opacity="1"/>
                                </Grid.Effect>
                                <Grid.RowDefinitions>
                                    <RowDefinition  Height="45"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid x:Name="GridBarraTitulo" Grid.Row="0" Background="#1497b8" >
                                    <MD:PackIcon Kind="PlusCircle" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center" Foreground="White" Height="28" Width="32"/>
                                    <TextBlock FontFamily="Cambria" HorizontalAlignment="Left" Margin="38,0,0,0" FontSize="20"  Text="Detail" Foreground="White" FontWeight="Bold"  VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
                                        <Button Command="{Binding AddFromCommand}" CommandParameter="1" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" >
                                            <MD:PackIcon Kind="Power" Height="28" Width="28"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1" Margin="5,10,5,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0">
                                        <StackPanel Orientation="Horizontal">
                                            <MD:PackIcon Kind="Group" Margin="0 10 6 0" Width="22" Height="28" Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}" VerticalAlignment="Center" />
                                            <ComboBox KeyboardNavigation.TabIndex="0" ItemsSource="{Binding ListOfGroup}" SelectedItem="{Binding SelectGroup}" MD:HintAssist.Hint="Select Group" Style="{StaticResource MaterialDesignFloatingHintComboBox}" DisplayMemberPath="GroupName" Foreground="Black" IsEditable="True" Height="43" FontSize="16" Width="500"/>
                                            <!--<TextBox  Text="" MD:HintAssist.Hint="NAME" FontFamily="Cambria" FontSize="15" Height="43" Width="460" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Foreground="Black"/>-->
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1">
                                        <StackPanel Orientation="Horizontal">
                                            <MD:PackIcon Kind="Account" Margin="0 10 6 0" Width="22" Height="28" Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}" VerticalAlignment="Center" />
                                            <TextBox KeyboardNavigation.TabIndex="1" Text="{Binding Lable1}" MD:HintAssist.Hint="NAME" FontFamily="Cambria" FontSize="16" Height="43" Width="500" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Foreground="Black"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2">
                                        <StackPanel Orientation="Horizontal">
                                            <MD:PackIcon Kind="AccountCardDetails" Margin="0 10 6 0" Width="22" Height="28" Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}" VerticalAlignment="Center" />
                                            <TextBox Margin="0,0" KeyboardNavigation.TabIndex="2" MD:HintAssist.Hint="Address1" Text="{Binding Lable2}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Cambria" Height="43" FontSize="16" Foreground="Black" Width="500"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="3">
                                        <StackPanel Orientation="Horizontal">
                                            <MD:PackIcon Kind="AccountCardDetails" Margin="0 10 6 0" Width="22" Height="28" Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}" VerticalAlignment="Center" />
                                            <TextBox Margin="0,0" KeyboardNavigation.TabIndex="3" MD:HintAssist.Hint="Address2" Text="{Binding Lable3}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Cambria" Height="43" Width="500" Foreground="Black" FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="5">
                                        <StackPanel Orientation="Horizontal">
                                            <MD:PackIcon Kind="Phone" Margin="0 10 6 0" Width="22" Height="28" Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}" VerticalAlignment="Center" />
                                            <TextBox Margin="0,0" KeyboardNavigation.TabIndex="5" MD:HintAssist.Hint="Address3" Text="{Binding Lable5}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Cambria" Height="43" Width="500" Foreground="Black" FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="4">
                                        <StackPanel Orientation="Horizontal">
                                            <MD:PackIcon Kind="City"  Margin="0 10 6 0" Width="22" Height="28" Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}" VerticalAlignment="Center" />
                                            <TextBox Margin="0,0" KeyboardNavigation.TabIndex="4" MD:HintAssist.Hint="City and Pincode" Text="{Binding Lable4}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Cambria" Height="43" Width="500" Foreground="Black" FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="6">
                                        <StackPanel Orientation="Horizontal">
                                            <MD:PackIcon Kind="Email" Margin="0 10 6 0" Width="22" Height="28" Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}" VerticalAlignment="Center" />
                                            <TextBox Margin="0,0" KeyboardNavigation.TabIndex="6" MD:HintAssist.Hint="Email" Text="{Binding Lable6}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Cambria" Height="43" Width="500" Foreground="Black" FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="7">
                                        <StackPanel Orientation="Horizontal">
                                            <MD:PackIcon Kind="Email" Margin="0 10 6 0" Width="22" Height="28" Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}" VerticalAlignment="Center" />
                                            <TextBox Margin="0,0" KeyboardNavigation.TabIndex="6" MD:HintAssist.Hint="Mobile No." Text="{Binding Lable7}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Cambria" Height="43" Width="500" Foreground="Black" FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="8">
                                        <StackPanel Orientation="Horizontal">
                                            <MD:PackIcon Kind="Tab" Margin="0 10 6 0" Width="22" Height="28" Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}" VerticalAlignment="Center" />
                                            <TextBox Margin="0,0" KeyboardNavigation.TabIndex="6" MD:HintAssist.Hint="Remarks1" Text="{Binding Lable8}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Cambria" Height="43" Width="500" Foreground="Black" FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="9">
                                        <StackPanel Orientation="Horizontal">
                                            <MD:PackIcon Kind="Tab" Margin="0 10 6 0" Width="22" Height="28" Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}" VerticalAlignment="Center" />
                                            <TextBox Margin="0,0" KeyboardNavigation.TabIndex="6" MD:HintAssist.Hint="Remarks2" Text="{Binding Lable9}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Cambria" Height="43" Width="500" Foreground="Black" FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="10">
                                        <StackPanel Orientation="Horizontal">
                                            <MD:PackIcon Kind="Tab" Margin="0 10 6 0" Width="22" Height="28" Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}" VerticalAlignment="Center" />
                                            <TextBox Margin="0,0" KeyboardNavigation.TabIndex="6" MD:HintAssist.Hint="Remarks3" Text="{Binding Lable10}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Cambria" Height="43" Width="500" Foreground="Black" FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Row="11">
                                        <StackPanel Margin="0,6,3,0" HorizontalAlignment="Right"  Orientation="Horizontal">
                                            <Button Command="{Binding SaveCommand}" KeyboardNavigation.TabIndex="7" Margin="0" Width="150" Height="50" Background="#009973" FontSize="22" FontWeight="Bold" BorderBrush="#009973" >
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <MD:PackIcon Kind="ContentSave" VerticalAlignment="Center" Width="22 " Height="22"/>
                                                    <TextBlock HorizontalAlignment="Center" Margin="5,0,0,0" Text="SAVE" FontFamily="Cambria"/>
                                                </StackPanel>
                                            </Button>

                                            <Button Command="{Binding ClearCommand}" KeyboardNavigation.TabIndex="8" Margin="10,0,0,0" Width="150" Height="50" Background="#e6ac00" FontSize="22" FontWeight="Bold" BorderBrush="#e6ac00">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <MD:PackIcon Kind="Broom" VerticalAlignment="Center" Width="22 " Height="22"/>
                                                    <TextBlock HorizontalAlignment="Center" Margin="5,0,0,0" Text="CLEAR" FontFamily="Cambria"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </MD:Card>
                    </Border>
                </Grid>
            </Grid>
            <Grid x:Name="GridLableLength" Visibility="{Binding FrmLabNo,UpdateSourceTrigger=PropertyChanged}" >
                    <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" Opacity=".28" />
                    <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Padding="0" BorderBrush="Transparent" BorderThickness="0">
                        <MD:Card  Padding="0" Margin="0" Width="500"  Height="230" VerticalAlignment="Center" HorizontalAlignment="Center" >
                            <Grid  Background="#ffffff" Width="500"  Height="230"  VerticalAlignment="Center" HorizontalAlignment="Center"   >
                                <Grid.Effect>
                                    <DropShadowEffect BlurRadius="5"  ShadowDepth="1" Opacity="1"/>
                                </Grid.Effect>
                                <Grid.RowDefinitions>
                                    <RowDefinition  Height="45"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Background="#1497b8" >
                                    <MD:PackIcon Kind="PlusCircle" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center" Foreground="White" Height="28" Width="32"/>
                                    <TextBlock FontFamily="Cambria" HorizontalAlignment="Left" Margin="35,0,0,3" FontSize="23"  Text=" No of Labels" Foreground="White" FontWeight="Bold"  VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
                                        <Button x:Name="ButtonFechar" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="ButtonFechar_Click">
                                            <MD:PackIcon Kind="Power" Height="28" Width="28"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1" Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="60"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Margin="8,10,0,0" Orientation="Horizontal">
                                        <RadioButton x:Name="Check16" FontFamily="Cambria" FontSize="15" GroupName="Lab" Cursor="Hand" >16Label</RadioButton>
                                        <RadioButton x:Name="Check24" Margin="10,0,0,0" FontFamily="Cambria" FontSize="15" GroupName="Lab" Cursor="Hand" >24Label</RadioButton>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" >
                                        <TextBox x:Name="txtLabelNo" Margin="8,0,8,0"  MD:HintAssist.Hint="No" FontFamily="Cambria" FontSize="22" Height="50" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Foreground="Black"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" >
                                        <StackPanel Margin="0,15,8,0" HorizontalAlignment="Right"  Orientation="Horizontal">
                                            <Button x:Name="btnNoPrint" Margin="0"  Width="260" Height="55" Background="#009973" FontSize="22" FontWeight="Bold" BorderBrush="#009973" Click="btnNoPrint_Click">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <MD:PackIcon Kind="Printer" VerticalAlignment="Center" Width="22 " Height="22"/>
                                                    <TextBlock HorizontalAlignment="Center" Margin="5,0,0,0" Text="Print" FontFamily="Cambria"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </MD:Card>
                    </Border>
            </Grid>
            <Grid Visibility="{Binding PrintSFrmVis,UpdateSourceTrigger=PropertyChanged}" >
            <!--<Grid Visibility="Collapsed" >-->
                    <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" Opacity=".28" />
                    <Border  HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Padding="0" BorderBrush="Transparent" BorderThickness="0">
                        <MD:Card  Padding="0" Margin="0" Width="740"  Height="590" VerticalAlignment="Center" HorizontalAlignment="Center" >
                            <Grid  Background="#ffffff" Width="740"  Height="590"  VerticalAlignment="Center" HorizontalAlignment="Center"   >
                                <Grid.Effect>
                                    <DropShadowEffect BlurRadius="5"  ShadowDepth="1" Opacity="1"/>
                                </Grid.Effect>
                                <Grid.RowDefinitions>
                                <RowDefinition  Height="45"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Background="#1497b8" >
                                    <MD:PackIcon Kind="Label" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center" Foreground="White" Height="28" Width="32"/>
                                    <TextBlock FontFamily="Cambria" HorizontalAlignment="Left" Margin="35,0,0,3" FontSize="23"  Text="Select Labels" Foreground="White" FontWeight="Bold"  VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
                                        <Button  Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Command="{Binding PrintGCCommand}" CommandParameter="2">
                                            <MD:PackIcon Kind="Power" Height="28" Width="28"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1" Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="60"/>
                                        <RowDefinition Height="335"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Margin="8,10,0,0" Orientation="Horizontal">
                                    <StackPanel Orientation="Horizontal" >
                                        <ComboBox  Text="{Binding LableType}" MD:HintAssist.Hint=" Select Lable" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="0,0,0,0"  Foreground="Black" IsEditable="True" Height="43" Width="160" FontSize="15" >
                                            <ComboBoxItem Content="Lable16" IsSelected="True"></ComboBoxItem>
                                            <ComboBoxItem Content="Lable18"></ComboBoxItem>
                                            <ComboBoxItem Content="Lable24"></ComboBoxItem>
                                        </ComboBox>
                                        <!--<RadioButton Margin="0,15,0,0" FontFamily="Cambria" HorizontalAlignment="Center" IsChecked="{Binding Lable16,UpdateSourceTrigger=PropertyChanged}" FontSize="15" GroupName="Lab1" Cursor="Hand" >16Label</RadioButton>
                                        <RadioButton  Margin="10,15,0,0" HorizontalAlignment="Center" IsChecked="{Binding Lable24,UpdateSourceTrigger=PropertyChanged}" FontFamily="Cambria" FontSize="15" GroupName="Lab1" Cursor="Hand" >24Label</RadioButton>-->
                                    </StackPanel>
                                    <TextBox Text="{Binding NoOfLable,UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding NoLangthVis,UpdateSourceTrigger=PropertyChanged}" Margin="15,0,0,0"  MD:HintAssist.Hint="No of Lable" FontFamily="Cambria" FontSize="22" Height="50" Width="125" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Foreground="Black"/>
                                    <ComboBox  Text="{Binding TextAlign}" MD:HintAssist.Hint=" TextAlign" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="10,0,0,0"  Foreground="Black" IsEditable="True" Height="43" Width="130" FontSize="15" >
                                        <ComboBoxItem Content="Center" IsSelected="True"></ComboBoxItem>
                                        <ComboBoxItem Content="Left"></ComboBoxItem>
                                        <ComboBoxItem Content="Right"></ComboBoxItem>
                                    </ComboBox>
                                    <ComboBox  Text="{Binding FontStyle}" MD:HintAssist.Hint=" FontStyle" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="10,0,0,0"  Foreground="Black" IsEditable="True" Height="43" Width="130" FontSize="15" >
                                        <ComboBoxItem Content="Normal" IsSelected="True"></ComboBoxItem>
                                        <ComboBoxItem Content="Italic"></ComboBoxItem>
                                    </ComboBox>
                                    <ComboBox  Text="{Binding FontWeight}"  MD:HintAssist.Hint=" FontWeight" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="10,0,0,0"  Foreground="Black" IsEditable="True" Height="43" Width="130" FontSize="15" >
                                        <ComboBoxItem Content="Normal" IsSelected="True"></ComboBoxItem>
                                        <ComboBoxItem Content="Thin"></ComboBoxItem>
                                        <ComboBoxItem Content="ExtraLight"></ComboBoxItem>
                                        <ComboBoxItem Content="Medium"></ComboBoxItem>
                                        <ComboBoxItem Content="SemiBold"></ComboBoxItem>
                                        <ComboBoxItem Content="Bold"></ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Margin="8,10,0,0" Orientation="Horizontal">
                                    <ComboBox  Text="{Binding Font}"  MD:HintAssist.Hint=" TextAlign" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="10,0,0,0"  Foreground="Black" IsEditable="True" Height="43" Width="130" FontSize="15" >
                                        <ComboBoxItem Content="Arial" IsSelected="True"></ComboBoxItem>
                                        <ComboBoxItem Content="Arial Black"></ComboBoxItem>
                                        <ComboBoxItem Content="Batang"></ComboBoxItem>
                                        <ComboBoxItem Content="Cambria"></ComboBoxItem>
                                        <ComboBoxItem Content="Courier New"></ComboBoxItem>
                                        <ComboBoxItem Content="Verdana"></ComboBoxItem>
                                        <ComboBoxItem Content="Georgia"></ComboBoxItem>
                                        <ComboBoxItem Content="Comic Sans MS"></ComboBoxItem>
                                        <ComboBoxItem Content="Impact"></ComboBoxItem>
                                        <ComboBoxItem Content="Miriam Fixed"></ComboBoxItem>
                                    </ComboBox>

                                </StackPanel>
                                <StackPanel Grid.Row="2" >
                                    <DataGrid  SelectionMode="Single" Height="335" IsReadOnly="True" ItemsSource="{Binding ListOfGridSC,UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="ColumnName" FontSize="15" Binding="{Binding ColumnName}" Width="*" />
                                            
                                            <DataGridTemplateColumn Header="No" Width="*">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBox Text="{Binding No,UpdateSourceTrigger=PropertyChanged}"  Width="100" FontSize="12"></TextBox>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="IsDisplay" Width="115">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <CheckBox Cursor="Hand" IsChecked="{Binding IsDisplay,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" ></CheckBox>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>

                                        </DataGrid>
                                    </StackPanel>
                                    <StackPanel Grid.Row="3" >
                                        <StackPanel Margin="0,15,8,0" HorizontalAlignment="Right"  Orientation="Horizontal">
                                            <Button Margin="0"  Width="260" Height="55" Background="#009973" FontSize="22" FontWeight="Bold" BorderBrush="#009973" Command="{Binding PrintCommand}">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <MD:PackIcon Kind="Printer" VerticalAlignment="Center" Width="22 " Height="22"/>
                                                    <TextBlock HorizontalAlignment="Center" Margin="5,0,0,0" Text="Print" FontFamily="Cambria"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </MD:Card>
                    </Border>
            </Grid>
        </Grid>

    </Grid>

</Page>
